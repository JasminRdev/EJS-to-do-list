<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Caveat&family=Nanum+Myeongjo&display=swap" rel="stylesheet">
    <title>To do list</title>
</head>

<body>
    <div class="container">
        <h1><%= listTitle %></h1>

    <div class="box">

   <%     newListItem.forEach(function(item){ %>

    <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                <p> <%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
      <%  }); %>


        <form action="/" method="post">
            <input class="newItem" type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="list" value="<%= listTitle %>"  >+</button>
        </form>
    </div>

</div>
</body>

</html>